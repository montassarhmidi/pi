{% extends 'back.html.twig' %}

  {% block content %}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Liste des employes</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Liste des employes</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Role</th>
                <th>Nbrheure</th>
                <th>Prime</th>
                <th>Salaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td><a href="{{ path('employe_show', { 'id': employe.id }) }}">{{ employe.id }}</a></td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.age }}</td>
                <td>{{ employe.role }}</td>
                <td>{{ employe.nbrHeure }}</td>
                <td>{{ employe.prime }}</td>
                <td>{{ employe.salaire }}</td>
                <td>
                    <ul style="list-style-type: none;">
                        <li>
                            <a href="{{ path('employe_show', { 'id': employe.id }) }}" class="btn btn-primary btn-sm">Consulter</a>
                            <a href="{{ path('employe_edit', { 'id': employe.id }) }}" class="btn btn-success btn-sm">Modifier</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                        </table>
                        <center>
                            <ul style="list-style-type: none;">
                                <li>
                                    <a href="{{ path('employe_new') }}" class="btn btn-outline-primary btn-lg btn-block" style="width: 30%">Cr√©er un nouvel employe</a>
                                </li>
                            </ul>
                        </center>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

  {% endblock %}