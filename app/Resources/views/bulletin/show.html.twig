{% extends 'back.html.twig' %}

{% block content %}
<center>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Voici les données de Bulletin N:° : {{ bulletin.id }}</strong>
            </div>
            <div class="card-body">
                <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bulletin.id }}</td>
            </tr>
            <tr>
                <th>Ideleve</th>
                <td>{{ bulletin.idEleve.id }}</td>
            </tr>
            <tr>
                <th>Idclasse</th>
                <td>{{ bulletin.idClasse.id }}</td>
            </tr>
            <tr>
                <th>Idmatiere</th>
                <td>{{ bulletin.idMatiere.id }}</td>
            </tr>
            <tr>
                <th>Moyenne</th>
                <td>{{ bulletin.moyenne }}</td>
            </tr>
        </tbody>
    </table>

                <center>
                    <ul style="list-style-type: none;">
                        <br>
                        <li>
                            {{ form_start(delete_form) }}
                            <a href="{{ path('bulletin_index') }}" class="btn btn-outline-secondary" >Retour à la liste</a>
                            <a href="{{ path('bulletin_edit', { 'id': bulletin.id }) }}" class="btn btn-outline-warning" >Modifier</a>
                            <input type="submit" value="Supprimer" class="btn btn-outline-danger">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </center>
            </div></div></div></center>
{% endblock %}
