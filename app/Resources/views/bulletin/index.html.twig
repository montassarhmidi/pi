{% extends 'back.html.twig' %}

{% block content %}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Liste des Bulletin</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Liste des Bulletin</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>

                            <tr>
                <th>Id</th>
                <th>Ideleve</th>
                <th>Idclasse</th>
                <th>Idmatiere</th>
                <th>Moyenne</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bulletin in bulletins %}
            <tr>
                <td><a href="{{ path('bulletin_show', { 'id': bulletin.id }) }}">{{ bulletin.id }}</a></td>
                <td>{{ bulletin.idEleve.id }}</td>
                <td>{{ bulletin.idClasse.id }}</td>
                <td>{{ bulletin.idMatiere.id }}</td>
                <td>{{ bulletin.moyenne }}</td>
                <td>
                    <ul style="list-style-type: none;">
                        <li>
                            <a href="{{ path('bulletin_show', { 'id': bulletin.id }) }} " class="btn btn-primary btn-sm">Consulter</a>

                            <a href="{{ path('bulletin_edit', { 'id': bulletin.id }) }}" class="btn btn-success btn-sm">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                        <center>
                            <ul style="list-style-type: none;">
        <li>
            <a href="{{ path('bulletin_new') }}" class="btn btn-outline-primary btn-lg btn-block" style="width: 30%">Cr√©er un nouveau bulletin</a>
        </li>
    </ul>
                        </center>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
{% endblock %}
